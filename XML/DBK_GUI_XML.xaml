<Window x:Name="mainWindow" x:Class="DBK_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBK_GUI"
        mc:Ignorable="d"
        Title="DBK" MinWidth="800" MinHeight="600">
    <Grid>
        <Button x:Name="button_start" Content="Start" HorizontalAlignment="Left" Margin="250,320,0,0" VerticalAlignment="Top" Height="50" Width="100" IsDefault="True"/>
        <Button x:Name="button_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="450,320,0,0" VerticalAlignment="Top" Height="50" Width="100" IsCancel="True"/>
        <Button x:Name="button_load_xml" Content="Load Settings from XML" HorizontalAlignment="Center" Margin="0,248,0,0" VerticalAlignment="Top" Height="20" Width="200"/>
        <TextBox HorizontalAlignment="Center" Margin="0,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="20"/>
        <Label Content="Config File XML Path:" HorizontalAlignment="Left" Margin="173,217,0,0" VerticalAlignment="Top" Width="127"/>
    </Grid>
</Window>
