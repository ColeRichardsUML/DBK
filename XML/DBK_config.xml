<root>

    <!-- The drive letter of the drive that DBK will be checking  -->
    <drive>D</drive> 

    <!-- parameters relating to the generation of the log -->
    <log>
        <path>"\Documents\PowerShell Logs\DBK"</path>
        <name>"DBK_log.log"</name>
    </log>
    
    <!-- parameters relating to the process the program will be monitoring and manipulating-->
    <process>
        <exe>Dropbox.exe</exe>
        <name_matches_exe>$True</name_matches_exe>
        <name>Dropbox</name>
        <path>C:\Program Files (x86)\Dropbox\Client</path>
    </process>

    <!-- The frequency at which DBK checks for updates (in seconds) -->
    <tickrate>10</tickrate>

</root>
